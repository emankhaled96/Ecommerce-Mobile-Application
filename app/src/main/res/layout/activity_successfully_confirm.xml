<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confirmation"
    tools:context=".Buyer.SuccessfullyConfirmActivity">

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/continuetopaymentbtn"
        android:fontFamily="@font/newbold"
        android:text="@string/continue_to_payment"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:id="@+id/continueToPaymentBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />


    <Button
        android:id="@+id/goHomeBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/backtohomebtn"
        android:fontFamily="@font/newbold"
        android:text="@string/go_back_home"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

</androidx.constraintlayout.widget.ConstraintLayout>