<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selleraddnewproductbackground"
    tools:context=".Sellers.SellerAddNewProductActivity">

    <EditText
        android:id="@+id/product_Name_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/product_name"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:textColorHint="@color/pink"
        android:textColor="@color/pink"
        android:layout_marginRight="45dp"
        android:fontFamily="@font/newregular"
        android:textSize="17dp"
        android:background="@drawable/custom_card3"
/>

<ImageView
    android:id="@+id/select_product_image"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:src="@drawable/addimage"
    android:layout_marginTop="155dp"
    android:layout_marginStart="85dp"
    android:scaleType="fitCenter"/>


    <EditText
        android:id="@+id/product_description_EditText"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:inputType="textMultiLine"
        android:hint="@string/product_description"
        android:layout_marginTop="370dp"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_card3"
android:textColor="@color/pink"
        android:textColorHint="@color/pink"
        android:fontFamily="@font/newregular"
        android:textSize="17dp"

        />

    <EditText
        android:id="@+id/product_price_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_EditText"
        android:inputType="textMultiLine"
        android:hint="@string/product_price1"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_card3"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"
        android:fontFamily="@font/newregular"
        android:textSize="17dp"

        />

    <Button
        android:id="@+id/add_new_product_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_EditText"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_button"
        android:fontFamily="@font/newbold"
        android:foreground="@drawable/plus"
        android:foregroundGravity="right|center_vertical"
        android:foregroundTint="@color/white"
        android:padding="17dp"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>