<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:elevation="15dp"
    app:cardCornerRadius="20dp"
    android:foreground="@drawable/custom_card"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="108dp">


        <ImageView
            android:id="@+id/fav_product_image"
            android:layout_width="116dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pinkdress" />
    </LinearLayout>
<LinearLayout
    android:layout_width="289dp"
    android:layout_height="108dp"
    android:layout_marginLeft="110dp"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fav_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/newbold"
        android:paddingTop="5dp"
        android:text="Product Name"
        android:textColor="@color/pink"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/fav_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fav_product_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/newbold"
        android:paddingTop="8dp"
        android:text="Product Price"
        android:textColor="@color/grey"
        android:textSize="15dp" />

    <Button
        android:id="@+id/removeFromFav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/fav_product_price"
        android:layout_marginStart="230dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_baseline_favorite_pink_24" />


    </LinearLayout>

</androidx.cardview.widget.CardView>