<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.SearchProductActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout44"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/pink"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/search_product_Category_name"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@android:color/white"
            android:fontFamily="@font/newbold"
            android:hint="Product Category"
            android:textColor="@color/pink"
            android:padding="9dp"
            android:textColorHint="@color/pink"
            android:textSize="18dp" />

        <Button
            android:id="@+id/search_product_Btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/search_product_Category_name"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/newbold"
            android:padding="9dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/pink"
            android:textSize="18dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/RelativeLayout44"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>