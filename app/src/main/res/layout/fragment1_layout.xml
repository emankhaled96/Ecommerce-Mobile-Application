<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.OrderActivity"
    android:background="@color/white">

   <ImageView
        android:id="@+id/order_empty_fragment"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/emptyimage"
        android:visibility="invisible"/>

    <TextView
        android:layout_below="@+id/order_empty_fragment"
        android:id="@+id/confirmation_text_order_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/newregular"
        android:text="Opps...it's empty here"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="22dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/confirmation_text_regular_order_fragment"
        android:layout_below="@+id/confirmation_text_order_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make some orders"
        android:textColor="@color/grey"
        android:textSize="19dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/newregular"
        android:visibility="invisible"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>




</RelativeLayout>

