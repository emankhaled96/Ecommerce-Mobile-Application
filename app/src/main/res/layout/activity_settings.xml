<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.SettingsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:text="Close"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   android:textColor="@android:color/white"
                   android:id="@+id/close_setting_btn"
                   android:layout_alignParentStart="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">


               </TextView>

               <TextView
                   android:id="@+id/update_account_settings_btn"
                   android:text="Update"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   android:textColor="@android:color/white"
                   android:layout_marginRight="10dp"
                   android:layout_alignParentEnd="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">


               </TextView>



           </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_bar_settings"
        android:layout_width="130dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:text="Change Profile"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settings_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




    </TextView>
    <EditText

        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number..."
        android:layout_margin="15dp"
        android:layout_below="@+id/profile_image_change_btn"
        android:padding="10dp"

        />
    <EditText

        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name..."
        android:layout_margin="15dp"
        android:layout_below="@+id/settings_phone_number"
        android:padding="10dp"

        />
    <EditText

        android:id="@+id/settings_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address..."
        android:layout_margin="15dp"
        android:layout_below="@+id/settings_full_name"
        android:padding="10dp"

        />

    <EditText

        android:id="@+id/settings_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:layout_margin="15dp"
        android:layout_below="@+id/settings_address"
        android:padding="10dp"

        />
    <Button

        android:id="@+id/security_questions_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Security Questions"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:layout_below="@+id/settings_pass"
        android:padding="10dp"

        />



</RelativeLayout>