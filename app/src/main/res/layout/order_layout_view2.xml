<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/custom_card"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_card4"

        >

        <TextView
            android:id="@+id/order_product_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/newregular"
            android:text="@string/product_date_time"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="17dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orders_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_product_date_time"
            android:layout_marginLeft="2dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>