<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">


    <RelativeLayout
        android:id="@+id/RelativeLayout55"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>




    </RelativeLayout>
    <EditText
        android:layout_below="@+id/RelativeLayout55"
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Please write your phone number..."/>

    <TextView
        android:id="@+id/security_questions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Security Questions"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/find_phone_number"
        android:gravity="center"
        android:textSize="26dp"
        />
    <EditText
        android:layout_below="@+id/security_questions_text"
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="What is your favourite color?"/>

    <EditText
        android:layout_below="@+id/question_1"
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="What is your favourite super hero?"/>


    <Button
        android:layout_below="@+id/question_2"
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Verify"/>
</RelativeLayout>