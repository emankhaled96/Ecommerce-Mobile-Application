<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="380dp"
    android:layout_margin="5dp"
    app:cardElevation="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="380dp">

        <TextView
            android:id="@+id/seller_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/newregular"
            android:padding="10dp"
            android:text="Product Name"
            android:textColor="@color/pink"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/seller_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/seller_product_name"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/seller_product_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/seller_product_image"
            android:layout_marginTop="10dp"
            android:foreground="@drawable/description"
            android:foregroundGravity="left|center_vertical"
            android:foregroundTint="@color/pink"
            android:paddingLeft="35dp"
            android:text="@string/product_description"
            android:textColor="@color/pink"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/seller_product_price"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/seller_product_description"
            android:layout_marginTop="5dp"
            android:foreground="@drawable/dollar"
            android:foregroundGravity="left|center_vertical"
            android:foregroundTint="@color/pink"
            android:paddingLeft="35dp"
            android:paddingTop="8dp"
            android:text="@string/product_price1"
            android:textColor="@color/pink"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/seller_product_state"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/seller_product_price"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/newbold"
            android:paddingLeft="10dp"
            android:text="State : "
            android:textColor="@color/pink"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>